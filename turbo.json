{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"lint": {
			"outputs": []
		},
		"dev": {
			"cache": false
		},
		"aigur-flow#dev": {
			"dependsOn": ["^build"],
			"env": ["OPENAI_KEY"],
			"outputs": ["dist/**"]
		},
		"playground#dev": {
			"dependsOn": ["^build"],
			"env": ["OPENAI_KEY", "NEXT_PUBLIC_OPENAI_KEY"],
			"outputs": [".next/**"]
		}
	}
}
